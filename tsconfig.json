{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "jsx": "react",
    "lib": ["dom", "es6", "dom.iterable", "scripthost", "es5", "es7", "es2017"],
    "types": ["jest", "node"],
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "sourceMap": true,

    "outDir": "dist"
  },
  "files": ["app/index.tsx"],
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx"
  ],
  "exclude": ["dist", "node_modules"]
}
