{
  "name": "mudita-center",
  "version": "4.4.0",
  "description": "Mudita Center",
  "productName": "Mudita Center",
  "scripts": {
    "bootstrap:local": "npm i && lerna bootstrap",
    "bootstrap:ci": "npm ci && lerna bootstrap --force-local --ignore-scripts",
    "develop": "npm run app:develop --",
    "lint": "lerna run lint",
    "lint:typecheck": "lerna run lint:typecheck",
    "test:coverage": "lerna run test:coverage",
    "test:e2e": "lerna run test:e2e",
    "prerelease": "npm run app:prerelease",
    "storybook:serve": "npm run app:storybook:serve --",
    "storybook:build": "npm run app:storybook:build --",
    "dist": "npm run app:dist --",
    "dist:all": "npm run app:dist:all --",
    "APP COMMANDS": "=========================================================",
    "app:develop": "lerna run --scope @mudita/mudita-center-app develop",
    "app:lint": "lerna run --scope @mudita/mudita-center-app lint",
    "app:lint:typecheck": "lerna run --scope @mudita/mudita-center-app lint:typecheck",
    "app:test:coverage": "lerna run --scope @mudita/mudita-center-app test:coverage",
    "app:test:e2e": "lerna run --scope @mudita/mudita-center-app test:e2e",
    "app:prerelease": "lerna run --scope @mudita/mudita-center-app prerelease",
    "app:storybook:serve": "lerna run --scope @mudita/mudita-center-app storybook:serve --",
    "app:storybook:build": "lerna run --scope @mudita/mudita-center-app storybook:build --",
    "app:dist": "lerna run --scope @mudita/mudita-center-app dist --",
    "app:dist:all": "lerna run --scope @mudita/mudita-center-app dist --",
    "app:electron:rebuild-serialport": "lerna run --scope app electron:rebuild-serialport --",
    "PURE COMMANDS": "========================================================",
    "pure:build": "lerna run --scope @mudita/mudita-center-pure build",
    "pure:lint": "lerna run --scope @mudita/mudita-center-pure lint",
    "pure:lint:typecheck": "lerna run --scope @mudita/mudita-center-pure lint:typecheck",
    "pure:test:coverage": "lerna run --scope @mudita/mudita-center-pure test:coverage",
    "pure:command": "lerna run --scope @mudita/mudita-center-pure command --",
    "DESIGN SYSTEM COMMANDS": "========================================================",
    "design-system:build": "lerna run --scope @mudita/mudita-center-design-system build",
    "design-system:release": "lerna run --scope @mudita/mudita-center-design-system release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mudita/mudita-center"
  },
  "author": {
    "name": "Mudita",
    "email": "contact@mudita.com"
  },
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Mudita/mudita-center/issues"
  },
  "homepage": "https://github.com/Mudita/mudita-center",
  "devDependencies": {
    "lerna": "^3.22.1",
    "typescript": "^4.1.3",
    "@mudita/eslint-config": "^1.0.14",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  },
  "engines": {
    "node": "12.18.4",
    "npm": "6.14.6"
  }
}
