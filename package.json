    "url-loader": "0.6.1",
    "webpack": "4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "3.4.0",
    "webpack-hot-middleware": "2.24.3",
    "webpack-merge": "4.1.4"
  },
  "dependencies": {
    "@storybook/addon-info": "^4.0.2",
