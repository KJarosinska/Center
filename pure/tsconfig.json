{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2018"],
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "src/**/*.test.ts"],
  "include": ["./src"]
}
